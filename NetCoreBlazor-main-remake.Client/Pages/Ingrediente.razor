@page "/ingredientes"




@inject NetCoreBlazor_main_remake.Client.Services.AuthService AuthService
@inject NetCoreBlazor_main_remake.Client.Services.IngredienteService IngredienteService
@inject NetCoreBlazor_main_remake.Client.Services.TipoIngredienteService TipoIngredienteService

@inject NavigationManager Navigation

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="mb-1">Ingredientes</h3>
            <small class="text-muted">
                Administración de ingredientes
            </small>
        </div>

        <button class="btn btn-success" @onclick="AbrirCrear">
            + Agregar Ingrediente
        </button>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">

            @if (lista == null)
            {
                <div class="text-center py-4">
                    <div class="spinner-border text-primary"></div>
                </div>
            }
            else if (!lista.Any())
            {
                <div class="alert alert-info">
                    No hay ingredientes registrados.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Tipo</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in lista)
                            {
                                <tr @onclick="() => AbrirEditar(item)" style="cursor:pointer">
                                    <td>@item.Name</td>
                                    <td>@item.Descriptions</td>
                                    <td>@item.TipoIngredienteNombre</td>
                                    <td class="text-end">
                                        <button class="btn btn-danger btn-sm"
                                                @onclick:stopPropagation
                                                @onclick="() => Eliminar(item.Id)">
                                            Eliminar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

        </div>
    </div>
</div>

<!-- MODAL -->
<div class="modal @(mostrarModal ? "show d-block" : "")"
     style="background-color: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">
                    @(editando ? "Editar Ingrediente" : "Nuevo Ingrediente")
                </h5>
                <button class="btn-close" @onclick="CerrarModal"></button>
            </div>

            <div class="modal-body">
                <EditForm Model="formulario" OnValidSubmit="Guardar">
                    <DataAnnotationsValidator />

                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <InputText class="form-control" @bind-Value="formulario.Name" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Descripción</label>
                        <InputTextArea class="form-control"
                                       rows="3"
                                       @bind-Value="formulario.Descriptions" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Tipo Ingrediente</label>
                        <InputSelect class="form-control"
                                     @bind-Value="formulario.TipoIngredienteId">
                            <option value="">Seleccione</option>
                            @foreach (var tipo in tipos)
                            {
                                <option value="@tipo.Id">@tipo.Name</option>
                            }
                        </InputSelect>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <button class="btn btn-primary" type="submit">
                            Guardar
                        </button>
                        <button class="btn btn-secondary" type="button"
                                @onclick="CerrarModal">
                            Cancelar
                        </button>
                    </div>
                </EditForm>
            </div>

        </div>
    </div>
</div>

@code {
    private List<IngredienteDTO>? lista;
    private List<TipoIngredienteDTO> tipos = new();

    private IngredienteCreateDTO formulario = new();
    private bool mostrarModal;
    private bool editando;
    private int editId;

    protected override async Task OnInitializedAsync()
    {
        var rol = await AuthService.GetRoleAsync();
        if (rol != "Chef")
        {
            Navigation.NavigateTo("/home");
            return;
        }

        await Cargar();
        tipos = await TipoIngredienteService.GetAllAsync();
    }

    private async Task Cargar()
    {
        lista = await IngredienteService.GetAllAsync();
    }

    private void AbrirCrear()
    {
        formulario = new();
        editando = false;
        mostrarModal = true;
    }

    private void AbrirEditar(IngredienteDTO item)
    {
        editando = true;
        editId = item.Id;
        formulario = new()
        {
            Name = item.Name,
            Descriptions = item.Descriptions,
            TipoIngredienteId = item.TipoIngredienteId
        };
        mostrarModal = true;
    }

    private async Task Guardar()
    {
        var ok = editando
            ? await IngredienteService.UpdateAsync(editId, formulario)
            : await IngredienteService.CreateAsync(formulario);

        if (ok)
        {
            mostrarModal = false;
            await Cargar();
        }
    }

    private async Task Eliminar(int id)
    {
        await IngredienteService.DeleteAsync(id);
        await Cargar();
    }

    private void CerrarModal()
    {
        mostrarModal = false;
    }
}
