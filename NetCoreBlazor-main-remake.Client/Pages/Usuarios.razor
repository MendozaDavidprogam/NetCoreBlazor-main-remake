@page "/usuarios"
@inject NetCoreBlazor_main_remake.Client.Services.AuthService AuthService
@inject NetCoreBlazor_main_remake.Client.Services.UsuarioAdminService UsuarioAdminService
@inject NavigationManager Navigation

<div class="container-fluid">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="mb-1">Usuarios</h3>
            <small class="text-muted">
                Administraci√≥n de usuarios registrados
            </small>
        </div>
    </div>

    <!-- Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body">

            @if (lista == null)
            {
                <div class="text-center py-4">
                    <div class="spinner-border text-primary"></div>
                    <p class="mt-2">Cargando...</p>
                </div>
            }
            else if (!lista.Any())
            {
                <div class="alert alert-info mb-0">
                    No hay usuarios registrados.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre</th>
                                <th>Correo</th>
                                <th>Rol</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in lista)
                            {
                                <tr style="cursor:pointer"
                                    @onclick="() => AbrirDetalle(item)">
                                    <td class="fw-semibold">
                                        @item.Name @item.Lastname
                                    </td>
                                    <td>@item.Email</td>
                                    <td>@item.Role</td>
                                    <td>@item.Status</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

        </div>
    </div>
</div>

<!-- MODAL DETALLE USUARIO -->
<div class="modal @(mostrarModal ? "show d-block" : "")"
     tabindex="-1"
     style="background-color: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">
                    Detalle del Usuario
                </h5>
                <button class="btn-close" @onclick="CerrarModal"></button>
            </div>

            <div class="modal-body">

                @if (usuarioSeleccionado != null)
                {
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Nombre</label>
                        <input class="form-control"
                               value="@($"{usuarioSeleccionado.Name} {usuarioSeleccionado.Lastname}")"
                               disabled />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Correo</label>
                        <input class="form-control"
                               value="@usuarioSeleccionado.Email"
                               disabled />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Rol</label>
                        <input class="form-control"
                               value="@usuarioSeleccionado.Role"
                               disabled />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Estado</label>
                        <input class="form-control"
                               value="@usuarioSeleccionado.Status"
                               disabled />
                    </div>
                }

                <div class="d-flex justify-content-end">
                    <button class="btn btn-secondary"
                            @onclick="CerrarModal">
                        Cerrar
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>

@code {
    private List<UsuarioDTO>? lista;
    private bool mostrarModal;
    private UsuarioDTO? usuarioSeleccionado;

    protected override async Task OnInitializedAsync()
    {
        var role = await AuthService.GetRoleAsync();
        if (role != "Administrador")
        {
            Navigation.NavigateTo("/home");
            return;
        }

        await Cargar();
    }

    private async Task Cargar()
    {
        lista = await UsuarioAdminService.ObtenerUsuariosAsync();
    }

    private void AbrirDetalle(UsuarioDTO usuario)
    {
        usuarioSeleccionado = usuario;
        mostrarModal = true;
    }

    private void CerrarModal()
    {
        mostrarModal = false;
        usuarioSeleccionado = null;
    }
}
