@page "/tipo-ingredientes"
@inject NetCoreBlazor_main_remake.Client.Services.AuthService AuthService
@inject NetCoreBlazor_main_remake.Client.Services.TipoIngredienteService Servicio
@inject NavigationManager Navigation

<div class="container-fluid">

    <!-- Header Dashboard -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="mb-1">Tipos de Ingredientes</h3>
            <small class="text-muted">
                Administración y mantenimiento de tipos de ingredientes
            </small>
        </div>

        <button class="btn btn-success"
                @onclick="AbrirCrear">
            + Agregar Tipo Ingrediente
        </button>
    </div>

    <!-- Card principal -->
    <div class="card shadow-sm border-0">
        <div class="card-body">

            @if (lista == null)
            {
                <div class="text-center py-4">
                    <div class="spinner-border text-primary"></div>
                    <p class="mt-2 mb-0">Cargando información...</p>
                </div>
            }
            else if (!lista.Any())
            {
                <div class="alert alert-info mb-0">
                    No hay tipos de ingredientes registrados.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in lista)
                            {
                                <tr style="cursor:pointer"
                                    @onclick="() => AbrirEditar(item)">
                                    <td class="fw-semibold">
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Descriptions
                                    </td>
                                    <td class="text-end">
                                        <button class="btn btn-danger btn-sm"
                                                title="Eliminar"
                                                @onclick:stopPropagation="true"
                                                @onclick="() => Eliminar(item.Id)">
                                            Eliminar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

        </div>
    </div>
</div>

<!-- MODAL -->
<div class="modal @(mostrarModal ? "show d-block" : "")"
     tabindex="-1"
     style="background-color: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">
                    @(editando
                        ? $"Editar Tipo Ingrediente: {formulario.Name}"
                        : "Nuevo Tipo Ingrediente")
                </h5>
                <button type="button"
                        class="btn-close"
                        @onclick="CerrarModal"></button>
            </div>

            <div class="modal-body">

                @if (!string.IsNullOrEmpty(mensajeExito))
                {
                    <div class="alert alert-success">@mensajeExito</div>
                }
                @if (!string.IsNullOrEmpty(mensajeError))
                {
                    <div class="alert alert-danger">@mensajeError</div>
                }

                <EditForm Model="formulario" OnValidSubmit="Guardar">
                    <DataAnnotationsValidator />

                    <div class="mb-3">
                        <label class="form-label">
                            Nombre del Tipo Ingrediente
                        </label>
                        <InputText class="form-control"
                                   @bind-Value="formulario.Name" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">
                            Descripción
                        </label>
                        <InputTextArea class="form-control"
                                       rows="3"
                                       @bind-Value="formulario.Descriptions" />
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <button type="submit"
                                class="btn btn-primary"
                                disabled="@cargando">
                            @if (cargando)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                            }
                            else
                            {
                                <span>Guardar</span>
                            }
                        </button>

                        <button type="button"
                                class="btn btn-secondary"
                                disabled="@cargando"
                                @onclick="CerrarModal">
                            Cancelar
                        </button>
                    </div>
                </EditForm>

            </div>
        </div>
    </div>
</div>

@code {
    private List<TipoIngredienteDTO>? lista;
    private bool mostrarModal;
    private bool editando;
    private bool cargando;
    private int editId;

    private string? mensajeExito;
    private string? mensajeError;

    private TipoIngredienteCreateDTO formulario = new();

    protected override async Task OnInitializedAsync()
    {
        var role = await AuthService.GetRoleAsync();
        if (role != "Administrador")
        {
            Navigation.NavigateTo("/home");
            return;
        }

        await Cargar();
    }

    private async Task Cargar()
    {
        lista = await Servicio.GetAllAsync();
    }

    private void AbrirCrear()
    {
        formulario = new();
        editando = false;
        mensajeError = null;
        mensajeExito = null;
        mostrarModal = true;
    }

    private void AbrirEditar(TipoIngredienteDTO item)
    {
        editando = true;
        editId = item.Id;
        formulario = new()
        {
            Name = item.Name,
            Descriptions = item.Descriptions
        };
        mensajeError = null;
        mensajeExito = null;
        mostrarModal = true;
    }

    private async Task Guardar()
    {
        cargando = true;
        mensajeError = null;
        mensajeExito = null;

        var ok = editando
            ? await Servicio.UpdateAsync(editId, formulario)
            : await Servicio.CreateAsync(formulario);

        cargando = false;

        if (!ok)
        {
            mensajeError = "Ocurrió un error al guardar.";
            return;
        }

        mensajeExito = "Guardado correctamente.";

        await Cargar();
        await Task.Delay(800);

        mostrarModal = false;
    }

    private async Task Eliminar(int id)
    {
        await Servicio.DeleteAsync(id);
        await Cargar();
    }

    private void CerrarModal()
    {
        if (!cargando)
            mostrarModal = false;
    }
}
