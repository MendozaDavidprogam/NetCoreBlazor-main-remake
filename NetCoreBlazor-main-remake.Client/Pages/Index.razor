@page "/"
@inject NetCoreBlazor_main_remake.Client.Services.AuthService AuthService
@inject IJSRuntime JS
@inject NavigationManager Navigation

<h2>Iniciar sesión</h2>

@if (isLoading)
{
    <p>Cargando...</p>
}

<div class="login-form">
    <input placeholder="Correo" @bind="email" />
    <input placeholder="Contraseña" type="password" @bind="password" />
    <button @onclick="HandleLogin">Aceptar</button>
    <p>¿No tienes cuenta? <a href="/register">Regístrate</a></p>
</div>

@code {
    private string email = string.Empty;
    private string password = string.Empty;
    private bool isLoading = false;

    private async Task HandleLogin()
    {
        isLoading = true;
        Console.WriteLine("Intentando login con: " + email);

        var token = await AuthService.LoginAsync(new Models.UsuarioLogin
        {
            Email = email,
            Password = password
        });

        isLoading = false;

        if (!string.IsNullOrEmpty(token))
        {
            Console.WriteLine("Login exitoso, token recibido: " + token);
            Navigation.NavigateTo("/home");
        }
        else
        {
            Console.WriteLine("Login fallido");
            await JS.InvokeVoidAsync("alert", "Credenciales incorrectas");
        }
    }
}
