@page "/register"
@inject NetCoreBlazor_main_remake.Client.Services.AuthService AuthService
@inject NavigationManager Navigation
@using NetCoreBlazor_main_remake.Client.Models

<h2 style="text-align:center; margin-bottom:20px;">Registrarse</h2>

@if (isLoading)
{
    <p style="text-align:center;">Cargando...</p>
}

<EditForm Model="@usuarioRegister" OnValidSubmit="HandleRegister">
    <DataAnnotationsValidator />

    <div class="form-wrapper">
        <div class="form-container">
            <div>
                <input placeholder="Nombre" @bind="usuarioRegister.Name" class="form-input"/>
                <ValidationMessage For="@(() => usuarioRegister.Name)" />
            </div>

            <div>
                <input placeholder="Apellido" @bind="usuarioRegister.Lastname" class="form-input"/>
                <ValidationMessage For="@(() => usuarioRegister.Lastname)" />
            </div>

            <div>
                <input placeholder="Correo" @bind="usuarioRegister.Email" class="form-input"/>
                <ValidationMessage For="@(() => usuarioRegister.Email)" />
            </div>

            <div>
                <input placeholder="Contraseña" type="password" @bind="usuarioRegister.Password" class="form-input"/>
                <ValidationMessage For="@(() => usuarioRegister.Password)" />
            </div>

            <button type="submit" class="form-button">Registrar</button>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="modal">@errorMessage</div>
            }

            <p class="form-link">
                ¿Ya tienes cuenta? <a href="/">Inicia sesión</a>
            </p>
        </div>
    </div>
</EditForm>

@code {
    private UsuarioRegister usuarioRegister = new();
    private bool isLoading = false;
    private string errorMessage = string.Empty;

    private async Task HandleRegister()
    {
        errorMessage = string.Empty;
        isLoading = true;

        var result = await AuthService.RegisterAsync(usuarioRegister);
        isLoading = false;

        if (result == "ok")
        {
            Navigation.NavigateTo("/");
        }
        else
        {
            errorMessage = "Error al registrarse";
        }
    }
}
